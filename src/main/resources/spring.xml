<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--
        <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
            <property name="suffix" value=".jsp" />
        </bean>-->

    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
          destroy-method="close">
        <property name="driverClassName" value="com.mysql.jdbc.Driver" />
        <property name="url" value="jdbc:mysql://localhost/departments" />
        <property name="username" value="root" />
        <property name="password" value="1" />
    </bean>

    <bean id="hibernateAnnotatedSessionFactory"
          class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSource" />
        <property name="annotatedClasses">
            <list>
                <value>models.Employee</value>
                <value>models.Department</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
                <prop key="hibernate.current_session_context_class">thread</prop>
                <prop key="hibernate.show_sql">true</prop>
            </props>
        </property>
    </bean>


    <bean id="DepartmentDAO" class="dao.departmentDAO.hibernate.DepartmentSpringHibernateImpl">
        <property name="sessionFactory" ref="hibernateAnnotatedSessionFactory" />
    </bean>

    <bean id="EmployeeDAOImpl" class="dao.employeeDAO.hibernate.EmployeeSpringHibernateImpl">
        <property name="sessionFactory" ref="hibernateAnnotatedSessionFactory" />
    </bean>

    <!--   <bean id="departmentService" class="services.impl.DepartmentSpringServiceImpl">
           <property name="DepartmentDAO" ref="DepartmentDAO"/>
       </bean>-->
</beans>
